<header id="header" class="header-two">
  
  	{% if page.topbar %}
	 	<div class="topbar topbar__two">
			<div class="topbar__content header-default__topbar-content">
		  		<div class="topbar__left">
			 		<div class="topbar__left-content"> 
						{{ page.topbar }}
			 		</div>  
		  		</div>
		  		<div class="topbar__right">
			 		<div class="topbar__right-content"> 
						{% if page.topbar_right %}
						  {{ page.topbar_right }}
						{% endif %}
			 		</div>  
		  		</div>
			</div>
	 	</div>
  	{% endif %}

  	{% set class_sticky = '' %}
  	{% if sticky_menu == 1 %}
	 	{% set class_sticky = 'gv-sticky-menu' %}
  	{% endif %}  

  	<div class="header-two__main {{ class_sticky }}">
	 	<div class="header-two__content">
			<div class="header-two__main-inner p-relative">
		  		<div class="header-two__left">    
			 		<div class="header-two__branding">
						{% if page.branding %}
						  {{ page.branding }}
						{% endif %}
			 		</div>
				 	<div class="header-two__main-menu">
						<div class="gva-offcanvas-mobile">
					  		<div class="close-offcanvas hidden"><i class="fa fa-times"></i></div>
					  		<div class="main-menu-inner">
						 		{% if page.main_menu %}
									{{ page.main_menu }}
						 		{% endif %}
					  		</div>
						  	{% if page.offcanvas %}
							 	<div class="after-offcanvas hidden">
									{{ page.offcanvas }}
							 	</div>
						  	{% endif %}
						</div>
					
						<div id="menu-bar" class="menu-bar menu-bar-mobile d-xxl-none d-xl-none">
					  		<span class="one"></span>
					  		<span class="two"></span>
					  		<span class="three"></span>
						</div>
				 	</div>
			  	</div>
		  		<div class="header-two__right">

			 		{% if gva_theme_setting('header_info') %}
			 			<div class="header-information style-white">
			 				{{ gva_theme_setting('header_info')|raw }}
			 			</div>	
			 		{% endif %}

				 	{% if page.search %}
						<div class="search-one__box style-white">
						  	<span class="search-one__icon"><i class="gv-icon-52"></i></span>
						  	<div class="search-one__content">  
							 	{{ page.search }}
						  	</div>  
						</div>
				 	{% endif %}

			 		{% if page.quick_side %}
						<div class="quick-side-icon style-white d-none d-xxl-block d-xl-block">
				  			<div class="icon"><a href="#"><span class="qicon gv-icon-103"></span></a></div>
						</div>
			 		{% endif %} 
		  		</div>  
			</div>
	 	</div>
  	</div>

</header>

